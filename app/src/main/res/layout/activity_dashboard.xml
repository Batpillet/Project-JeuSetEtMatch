<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@color/white_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical"
                android:background="@color/purple_title">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_title"
                    android:textColor="@color/white"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:textSize="40sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/dashboard_location"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@android:drawable/ic_menu_mylocation"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/dashboard_score"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@android:drawable/ic_menu_view"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="Nom"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:ems="10"
                        android:text="Set1" />

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="Set2" />

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="Set3" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="Gagnant" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Joueur1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        style="@style/frag1Col"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:inputType="text" />

                    <EditText
                        android:id="@+id/Set1j1"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        style="@style/frag1Col"
                        android:ems="10"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/Set2j1"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        style="@style/frag1Col"
                        android:ems="10"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/Set3j1"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        style="@style/frag1Col"
                        android:ems="10"
                        android:inputType="number" />

                    <RadioButton android:id="@+id/radioj1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"

                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Joueur2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        style="@style/frag1Col"
                        android:gravity="center"
                        android:inputType="text"/>

                    <EditText
                        android:id="@+id/Set1j2"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        style="@style/frag1Col"
                        android:ems="10"
                        android:inputType="number"/>

                    <EditText
                        android:id="@+id/Set2j2"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        style="@style/frag1Col"
                        android:ems="10"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/Set3j2"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        style="@style/frag1Col"
                        android:ems="10"
                        android:inputType="number" />

                    <RadioButton android:id="@+id/radioj2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/dashboard_stats"
                    android:drawableRight="@android:drawable/ic_menu_recent_history"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/Duree"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/dashboard_stats_time"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/saisie_duree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="number" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/Ace"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/dashboard_stats_ace"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/saisie_ace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/fautes"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/dashboard_stats_faults"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/saisie_fautes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/camera"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:drawableTop="@android:drawable/ic_menu_camera"
                    android:layout_weight="2"
                    android:background="@drawable/button2"
                    android:text="@string/dashboard_button_photo"
                    android:textSize="15sp"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_weight="2" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Back"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:background="@drawable/buttonback"
                    android:drawableTop="@android:drawable/ic_menu_revert"
                    android:text="@string/dashboard_button_back_menu"
                    android:textSize="18sp"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/Save"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:drawableTop="@android:drawable/ic_menu_save"
                    android:background="@drawable/buttonsave"
                    android:text="@string/dashboard_button_save_match"
                    android:onClick="addM"
                    android:textSize="18sp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>